<%= form_for(@appointment, remote: true, :html => { :role => "form" }, url: "/contacts/create_appointment/#{params[:id]}")do |f| %>

	<%= "Schedule and appointment with #{@receiver.first_name} #{@receiver.last_name}"%> 
	<br>
	<br>
	<div class='input-group date' id='datetimepicker1'>
    	<%= f.text_field :datetime, class: 'form-control', placeholder: 'Date and Time' %>
        	<span class="input-group-addon">
            	<span class="glyphicon glyphicon-calendar"></span>
        	</span>
  	</div>

  	<br>
	<div class="field input-group">
		
    	<%= f.text_field :price, class: 'form-control currency', placeholder: 'Price' %>
    	<span class="input-group-addon" id = "dollar">$</span>
	</div>

	 <div class="form-group">
	 	<br>
    	<%= f.submit  :class => "btn btn-primary" %>
  	</div>



<% end %>