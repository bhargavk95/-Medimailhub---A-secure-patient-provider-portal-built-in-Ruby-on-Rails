<br>
<h2> Your Contacts </h2>
<br>
<table class="dtable display responsive no-wrap">
	<col width="70%">
	<col width="10%">
	<col width="10%">
	<col width="10%">	
<thead>	
	<!-- Header -->
	<tr class = "header">
		<th> Name </th>
		<th> </th>
		<th> </th>
		<th> </th>
	</tr>
</thead>
	<!-- Body -->
	<tbody>
		<% @contacts.each do |contact| %>
		<tr>
			<!-- Name -->
			<td><%= contact.contact_name %></td>
			<!-- Buttons -->
			<td class = "actions">
				<%= link_to "#x", class: "btn btn-primary " do %>
    				<span class="glyphicon glyphicon-envelope "></span>
				<% end %>
			</td>
			<td>
				<%= link_to "#x", class: "btn btn-primary " do %>
    				<span class="glyphicon glyphicon-facetime-video"></span>
				<% end %>
			</td>
			<td>	
				<%= link_to delete_contact_path(contact), class: "btn btn-primary " do %>
    				<span class="glyphicon glyphicon-trash "></span>
				<% end %>
			</td>	
		</tr>
		<%end%>
	</tbody>	
</table>