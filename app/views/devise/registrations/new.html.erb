<style>
  body {
    background: linear-gradient( 
      rgba(0,0,0, 0.6),
      rgba(0,0,0, 0.6)
    ),url('/bg.jpg') no-repeat center center fixed;
    -webkit-background-size: cover;
    -moz-background-size: cover;
    -o-background-size: cover;
    background-size: cover;
  }
</style>
<div class="dummy2"></div>
<div class="row">
<div class="col-sm-8">
</div>
<div class="col-sm-4 panel panel-home"> 
<br>
<%= link_to "Log in", '/users/sign_in', class: 'btn btn-default btn-large button-signup' %>
<h2>New Patient/Physician</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  
  <%= devise_error_messages! %>
  
  <div class="field">
    <%= f.email_field :email, autofocus: true, placeholder: 'Email Id', class: 'form-control', id: 'signup-email' %>
  </div>

  <div class="field">
    <br />
    <%= f.text_field :first_name,placeholder: 'First Name', class: 'form-control' %>
  </div>
  
  <div class="field">
    <br />
    <%= f.text_field :last_name, placeholder: 'Last Name', class: 'form-control' %>
  </div>
  
  <div class="field">
    <br />
    <%= f.telephone_field :phone_one, placeholder: 'Primary Phone number', class: 'form-control' %>
  </div>
  
  <div class="field">
    <br />
    <%= f.telephone_field :phone_two, placeholder: 'Secondary Phone number', class: 'form-control' %>
  </div>
  
  <div class="field">
    <br />
    <!-- <%= f.date_select :d_o_b, options={:start_year => Date.today.year - 85, :end_year => Date.today.year } %> -->
    <%= f.text_field :d_o_b, :class => 'datepicker form-control', placeholder: 'Date of Birth' %>
  </div>

  <div class="field">
    <br />
    <%= f.text_field :location, placeholder: 'City', class: 'form-control' %>
  </div>
  
  <br>
  <div class='row'>
<!--   <div class="col-xs-3"><%= radio_button_tag(:gender, :male) %><%= label_tag(:gender, "Male") %></div>
  <div class="col-xs-6"><%= radio_button_tag(:gender, :female) %><%= label_tag(:gender, "Female") %></div> -->

  <div class="col-xs-3"><%= f.radio_button(:gender, :male) %><%= f.label(:gender, "Male") %></div>
  <div class="col-xs-6"><%= f.radio_button(:gender, :female) %><%= f.label(:gender, "Female") %></div>
  </div>

  <div class='row'>
  <div class="col-xs-3"><%= f.radio_button(:role, :doctor) %><%= f.label(:role, "Doctor") %></div>
  <div class="col-xs-6"><%= f.radio_button(:role, :patient) %><%= f.label(:role, "Patient") %></div>
  </div>

  <div class="field" , id='spec'>
    <br />
    <%= f.text_field :specialization, placeholder: 'Specialization', class: 'form-control'  %>
  </div>

  <div class="field">
    <!--<%= f.label :password %>-->
    <!--<% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em> 
    <% end %>-->
    <br />
    <%= f.password_field :password, autocomplete: "off", placeholder: 'Password', class: 'form-control', id: 'signup-password' %>
  </div>

  <div class="field">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: 'Confirm Password', class: 'form-control', id:'signup-password-confirm' %>
  </div>
  
  <br>
  <div class="actions">
    <%= f.submit "Sign up", class:'btn-default btn-large button-signup ' %>
  </div>
  <br>

<% end %>
<br>
<% resource_name = "" %>
<!--<%= render "devise/shared/links" %>-->
</div>
</div>

<!-- Javascript to hide specialization field -->
<script>
  
  $( document ).ready(function() {

  hidefield();
    
  document.getElementById('user_role_doctor').onclick = function() {
      showfield();  
  }

  document.getElementById('user_role_patient').onclick = function() {
      hidefield();  
  }


  });

  var hidefield = function() {
    document.getElementById("user_specialization").style.visibility = "hidden";  
    document.getElementById("spec").style.height = 0;
  }

  var showfield = function() {
   document.getElementById("user_specialization").style.visibility = "visible";
   document.getElementById("spec").style.height = "initial"; 
  }
  

</script>
