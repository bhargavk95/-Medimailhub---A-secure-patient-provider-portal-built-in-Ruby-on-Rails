
<%= form_for(@payment, remote: true, :html => { :role => "form" }, url: "/appointments/make_payment/#{params[:id]}")do |f| %>

  <div class="field">
    <%= f.text_field :card_number, class: 'form-control', placeholder: 'Card number' %>
  </div>

  <div class="field">
    <%= f.text_field :first_name, class: 'form-control', placeholder: 'First name' %>
  </div>

  <div class="field">
    <%= f.text_field :last_name, class: 'form-control', placeholder: 'Last name' %>
  </div>

  <div class="field">
    <%= f.text_field :card_verification, class: 'form-control', placeholder: 'CVV' %>
  </div>

  <div class='input-group date' id='datepickerpay'>
    <%= f.text_field :card_expires_on, class: 'form-control', placeholder: 'Date and Time' %>
        <span class="input-group-addon">
            <span class="glyphicon glyphicon-calendar"></span>
        </span>
  </div>

  <div class="form-group">
    <br>
      <%= f.submit  :class => "btn btn-primary" %>
  </div>
  

<% end %>