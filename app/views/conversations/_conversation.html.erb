<div class="media panel-body" <% if (User.find(conversation.originator.id).role=="doctor") %> 
                    style= "background:  #99ccff;" 
                  <% else %>
                    style= "background: #99ff66;" 
                  <%end %>>
  <!--
  <div class="media-left">
    <a href="#">
      <img class="media-object" src="http://placehold.it/64x64" alt="...">
    </a>
  </div> -->
  <div class="media-body">
    <h4 class="media-heading">
      <% if User.find(conversation.originator.id).role=="doctor" %>
        <b><%= "Dr. "+conversation.originator.first_name+" "+conversation.originator.last_name%></b>
      <% else %>
        <b><%= conversation.originator.first_name+" "+conversation.originator.last_name%></b>
      <% end%> <br>
      <small><b>Subject: </b><%= conversation.subject %></small><br>
      <small><b>Date: </b><%=  conversation.messages.last.created_at.strftime("%A, %b %d, %Y at %I:%M%p") %></small>
    </h4>
    <%= truncate conversation.messages.last.body, length: 145 %>
    <%= link_to "View", conversation_path(conversation)  %>
  </div>
</div>